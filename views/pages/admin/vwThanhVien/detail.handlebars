<link rel="stylesheet" href="/stylesheets/pages/admin/form-style.css">

<!-- partial -->
<div class="main-panel">
    <div class="content-wrapper">
        <div class="card d-flex flex-column justify-content-center">
            <div class="card-body d-flex justify-content-center ">
                <div class="contact1-form validate-form" style="width: 1000px;">
                    <span class="contact1-form-title">
                        Thông tin thành viên
                    </span>
                    <div class="row" >
                         <div class="col"> 
                            <span><i class="far fa-user-circle" style="margin-right: 5px;"></i>Tài khoản</span>
                            <div class="wrap-input1 validate-input">
                                <input class="input1" type="text" value="{{thanhvien.TaiKhoan}}" readonly="readonly">
                                <span class="shadow-input1"></span>
                            </div>
                        </div>
                        <div class="col">
                            <span><i class="fas fa-coins" style="margin-right: 5px;"></i>Điểm thưởng</span>
                            <div class="wrap-input1 validate-input" >   
                                <input class="input1" type="text"  readonly="readonly" value="{{thanhvien.DiemThuong}}" >
                                <span class="shadow-input1"></span>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col">
                            <span><i class="fas fa-signature" style="margin-right: 5px;"></i>Họ tên</span>
                            <div class="wrap-input1 validate-input" >   
                                <input class="input1" type="text"  value="{{thanhvien.HoTen}}"  readonly="readonly">
                                <span class="shadow-input1"></span>
                            </div>
                        </div>
                        <div class="col"> 
                            <span><i class="far fa-envelope" style="margin-right: 5px;"></i>Email</span>
                            <div class="wrap-input1 validate-input">
                                <input class="input1" type="email" value="{{thanhvien.Email}}" readonly="readonly" >
                                <span class="shadow-input1"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row" >
                        <div class="col">
                            <span><i class="fas fa-phone" style="margin-right: 5px;"></i>SĐT</span>
                            <div class="wrap-input1 validate-input">
                                <input class="input1" type="text" value="{{thanhvien.SDT}}" readonly="readonly">
                                <span class="shadow-input1"></span>
                            </div>
                        </div>
                        <div class="col">
                            <span><i class="fas fa-venus-mars" style="margin-right: 5px;"></i>Giới tính:</span>
                            <div class="wrap-input1 validate-input" style="width: 270px;">
                                <select class="input1 select-search-fk " aria-placeholder="Giới tính" name="GioiTinh" disabled>
                                    <option value="1" {{isSelected this.GioiTinh 1}}>Nam</option>
                                    <option value="0" {{isSelected this.GioiTinh 0}}>Nữ</option>
                                </select>
                                <span class="shadow-input1"></span>
                            </div>
                        </div>
                    </div>
                    
                    <hr>
                    <span class="contact1-form-title" >
                        Thông tin thẻ tín dụng
                    </span>
                    <div class="row">
                        <div class="col">
                            <span><i class="far fa-id-badge" style="margin-right: 5px;"></i>Số hiệu thẻ:</span>
                            <div class="wrap-input1 validate-input">
                                <input class="input1" type="email" value="{{thanhvien.SoHieuThe}}" readonly="readonly" >
                                <span class="shadow-input1"></span>
                            </div>
                        </div>
                        <div class="col">
                            <span><i class="fas fa-signature" style="margin-right: 5px;"></i>Họ tên</span>
                            <div class="wrap-input1 validate-input" >   
                                <input class="input1" type="text"  value="{{thanhvien.TenChuThe}}"readonly="readonly" >
                                <span class="shadow-input1"></span>
                            </div>
                        </div>

                    </div>
                    <div class="row" >
                        <div class="col">
                            <span><i class="fas fa-pencil-alt" style="margin-right: 5px;"></i>Mã CSC</span>
                            <div class="wrap-input1 validate-input">
                                <input class="input1" type="text" value="{{thanhvien.CSC}}"readonly="readonly" >
                                <span class="shadow-input1"></span>
                            </div>
                        </div>
                        <div class="col">
                            <span><i class="far fa-calendar-alt" style="margin-right: 5px;"></i>Ngày hết hạn</span>
                            <div class="wrap-input1 validate-input">
                                <input class="input1" type="text" value="{{thanhvien.NgayHetHan}}" readonly="readonly">
                                <span class="shadow-input1"></span>
                            </div>
                        </div>
                    </div>
                    <hr>
                    
                     <div class="container-contact1-form-btn">
                        <a class="contact1-form-btn" href="/admin/member/{{thanhvien.IdThanhVien}}/edit">
                            <span>
                                Chỉnh sửa 
                                <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
                            </span>
                        </a>
                    </div>

                    <span style="font-size:18px;color:#721777;font-weight: bold;">
                        Lịch sử giao dịch
                    </span>  
                </div>
            </div>
                <div class="row" style="margin-bottom:50px;">
                    <div class="col-12">
                        <div class="table-responsive">
                            <div id="order-listing_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4 no-footer">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <hr>
                                        <table id="order-listing" class="table dataTable no-footer" role="grid" aria-describedby="order-listing_info">
                                            <thead>
                                            <tr role="row">
                                                <th class="sorting_asc" tabindex="0" aria-controls="order-listing" rowspan="1" colspan="1" style="width: 63px;font-weight: bold;" aria-sort="ascending" >#</th>
                                                <th  class="sorting" tabindex="0" aria-controls="order-listing" rowspan="1" colspan="1" style="width: 79px;font-weight: bold;" >Mã đặt chỗ</th>
                                                <th class="sorting" tabindex="0" aria-controls="order-listing" rowspan="1" colspan="1" style="width: 54px;font-weight: bold;" >Mã chuyến bay</th>
                                                <th class="sorting" tabindex="0" aria-controls="order-listing" rowspan="1" colspan="1" style="width: 100px;font-weight: bold;" >Thời điểm giao dịch</th>
                                                <th class="sorting" tabindex="0" aria-controls="order-listing" rowspan="1" colspan="1" style="width: 100px;font-weight: bold;" >Ngày bay</th>
                                                <th class="sorting" tabindex="0" aria-controls="order-listing" rowspan="1" colspan="1" style="width: 100px;font-weight: bold;" >Điểm khởi hành</th>
                                                <th class="sorting" tabindex="0" aria-controls="order-listing" rowspan="1" colspan="1" style="width: 100px;font-weight: bold;" >Điểm đến</th>
                                                <th class="sorting" tabindex="0" aria-controls="order-listing" rowspan="1" colspan="1" style="width: 100px;font-weight: bold;" >Công cụ</th>
                                            </tr>
                                            </thead>
                                            <tbody>          
                                                {{#each history}}
                                                    <tr role="row" >
                                                        <td class="sorting_1">{{this.IdGiaoDich}}</td>  
                                                        <td>{{this.MaDatCho}}</td>         
                                                        <td>{{this.MaChuyenBay}}</td>
                                                        <td>{{this.ThoiDiemGiaoDich}}</td>
                                                        <td>{{this.NgayBay}}</td>
                                                        
                                                        <td>{{this.DiemKhoiHanh}}</td>
                                                        <td>{{this.DiemDen}}</td>
                                                        <td >
                                                            <a class="btn btn-success" type="submit" href="/admin/deal/{{this.IdGiaoDich}}/detail">Chi tiết</a>
                                                        </td>
                                                    </tr>                        
                                                {{/each}}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



