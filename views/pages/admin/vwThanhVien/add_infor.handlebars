<link rel="stylesheet" href="/stylesheets/pages/admin/form-style.css">

<!-- partial -->
<div class="main-panel">
    <div class="content-wrapper">
        <div class="card d-flex flex-column justify-content-center">
            <div class="card-body d-flex justify-content-center ">
                <form class="contact1-form validate-form" style="width: 1000px;" action = "/admin/member/addinfor" method="POST">
                    <span class="contact1-form-title">
                       Thêm thông tin thành viên
                    </span>
                    <br><hr>
                    <span class="contact1-form-title">
                       Thêm thông tin
                    </span>
                    <input type="hidden" class="sign-up-input" name= "IdThanhVien" value="{{IdThanhVien}}">
                    <div class="">
                        <span style="margin-left: 200px;"><i class="fas fa-signature" style="margin-right: 5px;"></i>Họ tên:</span>
                        <div class="wrap-input1 validate-input d-flex justify-content-center align-items-center" >   
                            <input class="input1" name= "HoTen"type="text" style="width:500px; " required>
                        </div>
                    </div>
                    <div class=""> 
                            <span style="margin-left: 200px;"><i class="far fa-envelope" style="margin-right: 5px;"></i>Email:</span>
                            <div class="wrap-input1 validate-input d-flex justify-content-center align-items-center">
                                <input class="input1" name="Email" type="email" style="width:500px; " required>
                            </div>
                    </div>
                    <div class="">
                        <span style="margin-left: 200px;"><i class="fas fa-phone" style="margin-right: 5px;"></i>SĐT:</span>
                        <div class="wrap-input1 validate-input d-flex justify-content-center align-items-center">
                            <input class="input1" name="SDT" type="text" style="width:500px; " required>
                        </div>
                    </div>
                    <br>
                    <hr>
                    <span class="contact1-form-title">
                       Thêm thông tin Thẻ tín dụng
                    </span>
                    <div class="row">
                        <div class="col">
                            <span><i class="far fa-id-badge" style="margin-right: 5px;"></i>Số hiệu thẻ:</span>
                            <div class="wrap-input1 validate-input">
                                <input class="input1" name="SoHieuThe" type="text" required>
                                <span class="shadow-input1"></span>
                            </div>
                        </div>
                        <div class="col">
                            <span><i class="fas fa-signature" style="margin-right: 5px;"></i>Họ tên chủ thẻ</span>
                            <div class="wrap-input1 validate-input" >   
                                <input class="input1" type="text"  name="TenChuThe" required>
                                <span class="shadow-input1"></span>
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col">
                            <span><i class="far fa-id-badge" style="margin-right: 5px;"></i>CSC</span>
                            <div class="wrap-input1 validate-input">
                                <input class="input1" name="CSC" type="text" required>
                                <span class="shadow-input1"></span>
                            </div>
                        </div>
                        <div class="col">
                            <span><i class="fas fa-signature" style="margin-right: 5px;"></i>Ngày hết hạn</span>
                            <div class="wrap-input1 validate-input" >   
                                <input class="input1" type="date" name="NgayHetHan" required>
                                <span class="shadow-input1"></span>
                            </div>
                        </div>

                    </div>
                    <div class="row d-flex justify-content-center">
                        <button class="contact1-form-btn" type="submit" style="margin-right: 30px;">
                            <span>
                                Thêm mới
                                <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
                            </span>
                        </button>
                    </div>
        </form>
    </div>
</div>



