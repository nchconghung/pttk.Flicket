{{#section 'js'}}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.0/jquery.validate.min.js"></script>
<script>
    $(function(){
        $('#registerForm').validate({            
            errorElement: 'small',
            errorClass: 'help-block text-danger',
            highlight: function(e){
                $(e).removeClass('is-valid').addClass('is-invalid');
            },
            unhighlight: function(e){
                $(e).removeClass('is-invalid').addClass('is-valid');
            }
        });
    })
</script>
{{/section}}
<div id="profile-main-container" style="padding: 0px 150px;">
    <form novalidate action="/guest/profile" method="POST" id="registerForm">
        <div id="sign-up-container" style="margin-bottom: 0px">
            <div id="sign-up-main-title">
                <span>Thiết lập thông tin cho tài khoản của bạn</span>
            </div>
            <input type="hidden" class="sign-up-input" name= "IdThanhVien" value="{{IdThanhVien}}">
            <div class="sign-up-input-element" style="margin-bottom: 14px;">
                <div class="sign-up-title">
                    <span style=" color: #7A9ED5;font-size: 20px;font-family: Quicksand-Medium;">Thông tin cá nhân</span>
                </div>
            </div>
            <div class="sign-up-input-element">
                <div class="sign-up-title">
                    <span>Họ và tên</span>
                </div>                
                <input type="text" class="sign-up-input" name= "name" required>
            </div>
            <div class="sign-up-input-element">
                <div class="sign-up-title">
                    <span>Email</span>
                </div>                
                <input type="email" name="email" class="sign-up-input" required>
            </div>
            <div class="sign-up-input-element">
                <div class="sign-up-title">
                    <span>Số điện thoại</span>
                </div>                
                <input name="phone" type="tel" pattern="[0-9]{10}" class="sign-up-input" required>
            </div>
            <div class="sign-up-input-element" style="margin-bottom: 14px;">
                <div class="sign-up-title">
                    <span style=" color: #7A9ED5;font-size: 20px;font-family: Quicksand-Medium;">Thanh toán</span>
                </div>
            </div>
            <div id="charge-error" class="alert alert-danger d-none" style="margin-top: 20px;">

                </div>
            <div class="sign-up-input-element">
                <div class="sign-up-title">
                    <span>Số thẻ tín dụng</span>
                </div>                
                <input type="text" required placeholder="16 chữ số mặt trên của mặt thẻ" name="cardID" class="sign-up-input" id="cardID" >
            </div>
            <div class="sign-up-input-element">
                <div class="sign-up-title">
                    <span>Hiệu lực đến ngày</span>
                </div>                
                <input type="text" class="date-input" data-language='en' required
                    placeholder="MM/YYYY" data-min-view="months" data-view="months"
                    data-date-format="mm/yyyy" name="expDate" class="sign-up-input" id="expDate"
                    style="height: 25px;
                            padding: 20px;
                            font-family: Quicksand-Medium;
                            font-size: 15px;
                            border: 1px solid #9E9D9D;">
            </div>
            <div class="sign-up-input-element">
                <div class="sign-up-title">
                    <span>CVV</span>
                </div>                
                <input maxlength="3" pattern="^[0-9]{3}" type="text" required placeholder="3 số CVV" name="cvv" id="CVV" class="sign-up-input" >
            </div>
            <div class="sign-up-input-element">
                <div class="sign-up-title">
                    <span>Tên trên thẻ</span>
                </div>                
                <input type="text" required placeholder="Tên trên thẻ" name="cardName" id="cardName" class="sign-up-input" >
            </div>
            <div id="sign-up-page-btn-container" style="margin-bottom: 30px;margin-top: 30px;">
                <button type="submit" id="sign-up-page-btn">Lưu thông tin</button>
            </div>
    </form>
</div>
