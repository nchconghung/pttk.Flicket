{{> "guest/header"}}
{{#section 'js'}}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.0/jquery.validate.min.js"></script>
<script>
    $(function(){
        $('#registerForm').validate({
            rules:{
                username: {
                    required: true,
                },
                matkhau: {
                    required: true,
                    minlength: 6
                },
            },
            messages: {
                TaiKhoan: {
                    remote: 'Tài khoản này đã được dùng'
                },
                MatKhau: {
                    required: "Mật khẩu cần được nhập",
                    minlength: "Mật khẩu cần dài hơn 6 kí tự"
                },
            },
            errorElement: 'small',
            errorClass: 'help-block text-danger',
            highlight: function(e){
                $(e).removeClass('is-valid').addClass('is-invalid');
            },
            unhighlight: function(e){
                $(e).removeClass('is-invalid').addClass('is-valid');
            }
        });
    })
</script>
{{/section}}
<div id="sign-up-main-container" style="padding: 0px 150px;">
    <div id="sign-up-img">
        <img src="/images/guest/sign_in_image.gif" height="380px" width="auto">
    </div>
    <form novalidate action="/guest/signin" method="POST" id="registerForm">
        <div id="sign-up-container" style="margin-bottom: 0px">
            <div id="sign-up-main-title">
                <span>Đăng nhập thành viên Flicket</span>
            </div>
            <div id="charge-error" class="alert alert-danger d-none" style="margin-top: 20px;">

            </div>
            <div class="sign-up-input-element">
                <div class="sign-up-title">
                    <span>Tài khoản</span>
                </div>
                <div class="sign-up-note">
                    <span>Không được chứa dấu, số và ký tự đặc biệt</span>
                </div>
                <input type="text" class="sign-up-input" name="username">
            </div>
            <div class="sign-up-input-element">
                <div class="sign-up-title">
                    <span>Mật khẩu</span>
                </div>
                <div class="sign-up-note">
                    <span>Tối thiểu 6 ký tự</span>
                </div>
                <input type="password" name="password" id="pass"class="sign-up-input" >
            </div>
            <div id="sign-up-page-btn-container">
                <button type="submit" id="sign-up-page-btn">Đăng nhập</button>
            </div>
    </form>
    {{#if err_message}}
    <br>
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
            {{err_message}}
        </div>
    {{/if}}
</div>